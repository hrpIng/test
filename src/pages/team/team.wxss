/* pages/team/team.wxss */
@import "/components/selectLayer/selectLayer.wxss";
.condition-filter{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 78rpx;
    border-bottom: 2rpx solid #e0e0e0;
}

.team-main{
    height: 100%;
}

.team-main .item-wrapper{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 25rpx 35rpx;
    border-bottom: 1rpx solid #bbb;
    line-height: 44rpx;
    font-size: 26rpx;
    color: #666;
}
.team-main .item-wrapper .avatar{
    width: 90rpx;
    height: 90rpx;
    margin-right: 20rpx;
}

.team-main .item-wrapper .detail{
    flex: 1
}

.team-main .item-wrapper .userinfo{
    font-size: 28rpx;
    color: #333;
    margin-right: 100rpx;
}

.team-main .item-wrapper .distance{
    position: absolute;
    right: 35rpx;
    top: 25rpx;
    font-size: 24rpx;
    color: #999;
}