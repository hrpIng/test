/* pages/indexTemplate/indexTemplate.wxss */
@import "/pages/index/index.wxss";
@import "/pages/team/team.wxss";
@import "/pages/my/my.wxss";
page{
    height: 100%;
    overflow: hidden;
}
.footer-tab{
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 92rpx;
    background-color: #fff;
    border-top: 1rpx solid #e0e0e0;
    text-align: center;
    z-index: 8;
}

.footer-tab .footer-item{
    flex: 1;
    color: #333;
    font-size: 24rpx;
    line-height: 36rpx;
    vertical-align: top;
}

.footer-tab .footer-item .img{
    display: block;
    width: 56rpx;
    height: 56rpx;
    margin: 0 auto;
}

.footer-tab .footer-item.act{
    color: #5ca6f2;
}


.main-wrapper{
    position: relative;
    padding-bottom: 93rpx;
    height: 100%;
    box-sizing: border-box;
}

.main-wrapper .main-swiper-item{
    position: absolute;
    left: 0%;
    top: 0;
    bottom: 93rpx;
    width: 100%;
    opacity: 0;
    background-color: #fff;
    visibility: hidden;
    transition:all 0.5s;
}
.main-wrapper .main-swiper-item.act{
    opacity: 1;
    visibility: visible;
    transition:all 0.5s;
}